@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<h1 class="text-center" style="padding-top:100px;">Предстоящие события</h1>
@if (Model.HackathonList.Count() > 0)
{
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @for (int index = 0; index < Model.HackathonList.Count(); index++)
            {
                if (index == 0)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@index" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@index"></li>
                }
            }
        </ol>
        <div class="carousel-inner">
            @for (int index = 0; index < Model.HackathonList.Count(); index++)
            {
                if (index == 0)
                {
                    <div class="carousel-item active">
                        <img class="d-block w-100" height="700px" id="image_@Model.HackathonList[index].Id" src="@Model.HackathonList[index].GetFileFromBytes()">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Хакатон в СибГУ</h5>
                            <p>Немного данных о хакатоне и ниже кнопка "Подробнее"</p>
                            <a asp-controller="Hackathon" asp-action="Index" asp-route-hackathonId="@Model.HackathonList[index].Id">
                                <button type="button" class="btn btn-info">Подробнее</button>
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" height="700px" id="image_@Model.HackathonList[index].Id" src="@Model.HackathonList[index].GetFileFromBytes()">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Хакатон в СибГУ</h5>
                            <p>Немного данных о хакатоне и ниже кнопка "Подробнее"</p>
                            <a asp-controller="Hackathon" asp-action="Index" asp-route-hackathonId="@Model.HackathonList[index].Id">
                                <button type="button" class="btn btn-info">Подробнее</button>
                            </a>
                        </div>
                    </div>
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}
else
{
    //TODO изображение-заглушка
}
<div id="registraion_links_container" class="container pt-5 pb-5">
    <div class="row">
        <div class="col-6">
            <img src="~/img/600x800.png" class="d-block w-100" alt="...">
        </div>
        <div class="col d-flex flex-column justify-content-center align-items-center">
            <div class="text-center pb-3">
                <h1 class="display-6">Регистрируйся прямо сейчас!</h1>
            </div>
            <div class="pb-3 w-75">
                <a asp-controller="Register" asp-action="Index">
                    <button class="btn btn-info w-100">Хочу участвовать!</button>
                </a>
            </div>
        </div>
    </div>
</div>

