@using Hacathoon_Master.Entities
@model UserListViewModel
@{
    ViewBag.Title = "Админка";
    Layout = "_Layout";
}

@section SidebarMenu
{
    <li class="nav-item">
        <a asp-controller="Admin" asp-action="Users" class="nav-link active">
            <i class="nav-icon fas fa-tachometer-alt"></i>
            <p>
                Пользователи
            </p>
        </a>
    </li>
    <li class="nav-item">
        <a asp-controller="Admin" asp-action="Hackathons" class="nav-link">
            <i class="nav-icon fas fa-th"></i>
            <p>
                Хакатоны
            </p>
        </a>
    </li>
}

<div class="">
    <div class="row">
        <a asp-action="CreateUser" asp-controller="Admin">
            <button class="btn btn-info">
                Добавить пользователя
            </button>
        </a>
    </div>
    <div class="row" style="padding-top: 5px;">
        <table class="table">
            <thead>
            <tr class="table-primary">
                <th scope="col">#</th>
                <th scope="col">Фамилия</th>
                <th scope="col">Имя</th>
                <th scope="col">Почта</th>
                <th scope="col">Телефон</th>
                <th scope="col">Роль</th>
                <th scope="col">Действие</th>
            </tr>
            </thead>
            <tbody>
            @foreach(var user in Model.Users)
            {
                <tr class="table-secondary">
                    <th scope="row">@user.Id</th>
                    <td>@user.Surname</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>@Enum.Parse(typeof(Roles), user.RoleId.ToString())</td>
                    <td>
                        <a asp-action="EditUser" asp-controller="Admin" asp-route-userId="@user.Id">
                            <button>
                                Изменить
                            </button>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

